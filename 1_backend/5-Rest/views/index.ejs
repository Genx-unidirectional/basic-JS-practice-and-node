<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <header>
        <h1>Quora Posts</h1>
    </header>
    <main>
        <% for(const post of posts){ %>
            <br class="card">
            <h2>
                <%= post.username %>
            </h2>
            <p>
                <%= post.content %>
            </p>
            <a href="http://localhost:3000/posts/<%= post.id %>">Show Post</a><br> <a
                href="http://localhost:3000/posts/<%= post.id %>/edit">Edit Post</a>
            <form method="post" action="http://localhost:3000/posts/<%= post.id %>?_method=DELETE">
                <button>Delete</button>
            </form>

            </article>
            <% } %>
    </main>
    <footer>
        <a href="http://localhost:3000/posts/new">create new post</a>
    </footer>
</body>

</html>